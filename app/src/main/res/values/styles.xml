<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="buttonBlueWhite" parent="android:Widget.Button">
        <item name="android:background">@drawable/rounded_rect_blue</item>
        <item name="android:textColor">@color/colorTextTwo</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

