<?xml version="1.0" encoding="utf-8"?>
<!-- The android:opacity="opaque" line — this is critical in preventing a flash of black as the theme transitions. -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" android:opacity="opaque" android:fitsSystemWindows="true">

    <!-- The background color, preferably the same as the normal theme -->
    <item android:drawable="@color/colorPrimary" />

    <item android:name="android:windowTranslucentStatus">true</item>
    <item android:name="android:windowTranslucentNavigation">true</item>

    <item>
        <bitmap
            android:src="@drawable/ic_sentienterprizelogo"
            android:gravity="center" />
    </item>

</layer-list>