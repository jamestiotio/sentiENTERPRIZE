<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_sentienterprizelogo" />

    <Button
        android:id="@+id/buttonFacebook"
        style="@style/buttonBlueWhite"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonGoogle"
        android:layout_marginBottom="20dp"
        android:text="Login with Facebook" />

    <Button
        android:id="@+id/buttonGoogle"
        style="@style/buttonBlueWhite"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:textSize="14sp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/orBreak"
        android:layout_marginBottom="20dp"
        android:text="Login with Google" />

    <ImageView
        android:id="@+id/orBreak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_orbreak" />

    <EditText
        android:id="@+id/editTextViewEmail"
        style="@style/editTextGreyBlack"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:textSize="14sp"
        android:paddingLeft="25sp"
        android:maxLines="1"
        android:lines="1"
        android:singleLine="true"
        app:layout_constraintTop_toBottomOf="@id/orBreak"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:hint="Email" />

    <EditText
        android:id="@+id/editTextViewPassword"
        style="@style/editTextGreyBlack"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:textSize="14sp"
        android:paddingLeft="25sp"
        android:maxLines="1"
        android:lines="1"
        android:singleLine="true"
        app:layout_constraintTop_toBottomOf="@id/editTextViewEmail"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:hint="Password" />

    <Button
        android:id="@+id/buttonLogIn"
        style="@style/buttonOrangeBlack"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/editTextViewPassword"
        app:layout_constraintLeft_toLeftOf="@id/editTextViewPassword"
        app:layout_constraintRight_toLeftOf="@id/buttonSignUp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:text="Log In" />

    <Button
        android:id="@+id/buttonSignUp"
        style="@style/buttonOrangeBlack"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/editTextViewPassword"
        app:layout_constraintLeft_toRightOf="@id/buttonLogIn"
        app:layout_constraintRight_toRightOf="@id/editTextViewPassword"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:text="Sign Up" />

</androidx.constraintlayout.widget.ConstraintLayout>